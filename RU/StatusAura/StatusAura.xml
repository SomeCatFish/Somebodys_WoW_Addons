		</Frames>
		<Scripts>
			<OnLoad>
				self:Hide()
			</OnLoad>
			<OnMouseDown>
				if button == "LeftButton" then
				self:StartMoving()
				end
			</OnMouseDown>
			<OnMouseUp>
				self:StopMovingOrSizing()
			</OnMouseUp>
		</Scripts>
